{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ],
      "@sivi/sample-lib": ["../common-libs/sample-lib/src/*"],
    }
  },
  "include": [
    "src",
    "types",
    "electron.vite.config.*",
    "index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
}
